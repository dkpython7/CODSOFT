<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the task item -->
    <solid android:color="@color/custom_color"/>

    <!-- Border properties -->
    <stroke
        android:width="2dp"
        android:color="@color/accentColor"/>

    <!-- Corner radius for rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Optional padding inside the border -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
